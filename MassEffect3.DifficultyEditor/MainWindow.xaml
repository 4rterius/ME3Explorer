<Window x:Class="MassEffect3.DifficultyEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		
		<RichTextBox x:Name="InputTextBox"
			Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
			HorizontalAlignment="Left" Margin="5" AcceptsTab="True">
			<!--<FlowDocument>
				<Paragraph>
					<Run Text="RichTextBox"/>
				</Paragraph>
			</FlowDocument>-->
		</RichTextBox>

		<RichTextBox x:Name="OutputTextBox"
			Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2"
			HorizontalAlignment="Left" Margin="5">
			<!--<FlowDocument>
				<Paragraph>
					<Run Text="RichTextBox"/>
				</Paragraph>
			</FlowDocument>-->
		</RichTextBox>
		
		<Button x:Name="ConvertButton"
			Grid.Column="1" Grid.Row="2"
			Content="Convert" Margin="5" Click="ConvertButton_Click" />
	</Grid>
</Window>
