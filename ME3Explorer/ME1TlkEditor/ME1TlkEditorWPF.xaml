<global:ExportLoaderControl
    xmlns:global="clr-namespace:ME3Explorer"
    x:Class="ME3Explorer.ME1TlkEditor.ME1TlkEditorWPF"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ME3Explorer.ME1TlkEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <!-- Edit button that controls whether tlk can be edited. When pressed changes to cancel. Click cancel stops edit mode without saving to object. -->
        <Button Name="btnEdit" Click="evt_EditOn" Content="Edit" IsDefault="True" Cursor="Arrow" Margin="5,5,5,5" Width="80" HorizontalAlignment="Left" ToolTip="Edit the TLK" FontWeight="Normal"/>
        <!-- Commit button saves edits. disabled by default. Enabled when editing. Ends edit mode with saving to object -->
        <Button Name="btnCommit" Click="evt_Commit" Content="Commit" IsDefault="False" Cursor="Arrow" Margin="5,5,5,5" Width="80" HorizontalAlignment="Left" IsEnabled="False" ToolTip="Commit changes" FontWeight="Normal"/>
        <!-- Search text -->
        <TextBox Height="23" Width="160" TextWrapping="Wrap" Margin="5,5,5,5" HorizontalAlignment="Left" Text="Search Text" />
        <!-- Input string # -->
        <TextBox Height="23" Width="160" TextWrapping="Wrap" Margin="5,5,5,5" HorizontalAlignment="Left" Text="Goto String" />
        <ListBox Height="200" Name="DisplayedString_ListBox" ItemsSource="{Binding LoadedStrings}" HorizontalContentAlignment="Stretch" ></ListBox>
        <TextBlock Text="This will be filled by xml from the TLK" FontFamily="Courier New" FontSize="14"/>
    </StackPanel>
</global:ExportLoaderControl>
