<Window x:Class="KFreonLib.GUI.VersionPickDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMessageBox" MaxHeight="150" MaxWidth="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" ScrollViewer.VerticalScrollBarVisibility="Auto" ShowInTaskbar="False" WindowStyle="ToolWindow"
        Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="80" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Name="messageBlock" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        </ScrollViewer>
        <StackPanel Margin="0,5,20,10" HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button Content="ME1Button" Name="me1button" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" MinWidth="75" Click="me1button_Click"/>
            <Button Content="ME2Button" Name="me2button" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Top" MinWidth="75" Click="me2button_Click"/>
            <Button Content="ME3Button" Name="me3button" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Top" MinWidth="75" Click="me3button_Click"/>
        </StackPanel>
    </Grid>
</Window>
